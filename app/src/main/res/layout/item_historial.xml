<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cancion"
        android:rowCount="3"
        android:columnCount="3"
        android:clickable="false"
        android:id="@+id/rel">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icono"
            android:src="@mipmap/ic_history_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignTop="@+id/txtNombre"
            android:layout_alignBottom="@+id/txtArtista" />

        <TextView
            android:layout_width="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nombre"
            android:id="@+id/txtNombre"
            android:textColor="#ff373737"
            android:singleLine="true"
            android:textSize="16sp"
            android:autoText="false"
            android:gravity="center_vertical"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/icono"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtArtista"
            android:layout_row="1"
            android:layout_column="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_below="@+id/txtNombre"
            android:textColor="#ffafafaf"
            android:layout_toRightOf="@+id/icono"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="7dp" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtCalidad"
            android:gravity="center"
            android:background="#ff1dfa7e"
            android:textColor="#ff282828"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>






